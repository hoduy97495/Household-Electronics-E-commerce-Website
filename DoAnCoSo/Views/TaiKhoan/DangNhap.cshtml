@model DoAnCoSo.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng Nhập";
}

<div class="container">
    <h6 class="checkout__title">Đăng Nhập</h6>
    <form asp-action="DangNhap" asp-route-returnurl="@ViewBag.ReturnUrl">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="row">
            <div class="col-lg-6">
                <div class="checkout__input">
                    <label asp-for="@Model.Email">Email<span>*</span></label>
                    <input asp-for="@Model.Email">
                    <span asp-validation-for="@Model.Email"></span>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="checkout__input">
                    <label class="form-label" asp-for="@Model.MatKhau">Mật Khẩu<span>*</span></label>
                    <input asp-for="@Model.MatKhau" type="password">
                    <span asp-validation-for="@Model.MatKhau"></span>
                </div>
            </div>

            <div class="col-lg-12 text-center">
                <button type="submit" class="site-btn">Đăng Nhập</button>
            </div>

            <div class="col-lg-12 text-center">
                <p>Bạn chưa có tài khoản <a asp-controller="TaiKhoan" asp-action="DangKy"  class="btn-link-style btn-register" style="text-decoration: underline;">Đăng ký tại đây</a></p>
            </div>
        </div>
    </form>
</div>

<style>
    .text-center {
        text-align: center;
    }

    .site-btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 14px;
    }
</style>